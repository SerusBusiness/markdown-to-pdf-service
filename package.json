{
  "name": "markdown-to-pdf-service",
  "version": "1.0.0",
  "description": "A robust microservice for converting Markdown to PDF with API and CLI support",
  "main": "src/server.js",
  "bin": {
    "md2pdf": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "cli": "node src/cli.js",
    "test": "jest",
    "lint": "eslint src/",
    "docker:build": "docker build -t markdown-to-pdf-service .",
    "docker:run": "docker run -p 3000:3000 markdown-to-pdf-service"
  },
  "keywords": ["markdown", "pdf", "converter", "microservice", "api", "cli"],
  "author": "AI Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "marked": "^9.1.6",
    "puppeteer": "^21.6.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "joi": "^17.11.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}